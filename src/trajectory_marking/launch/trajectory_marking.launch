<?xml version="1.0"?>

<launch>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>


  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find trajectory_marking)/worlds/trajectory_marking.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="verbose" value="false"/>
  </include>

  <!-- Spawn a robot into Gazebo -->
  <arg name="model" default="$(find trajectory_marking)/urdf/polaris.urdf"/>
  <param name="robot_description" textfile="$(arg model)"/>
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-param robot_description -x 0 -y 0 -z 1 -urdf -model polaris"/>


  <arg name="robot_name" default="marker"/>
  <arg name="sdf_file" default="$(find trajectory_marking)/models/marker/model.sdf" />

  <node name="$(arg robot_name)_spawn_sdf" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-file $(arg sdf_file) -sdf -x 0 -y 0 -z 0 -model $(arg robot_name)" />

</launch>
